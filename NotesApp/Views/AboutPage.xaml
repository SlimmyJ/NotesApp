<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NotesApp.Views.AboutPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *">
            <Image BackgroundColor="{OnPlatform Android=LightGray,
                                             UWP=LightBlue}"
                   HeightRequest="64"
                   Source="xamarin_logo.png"
                   VerticalOptions="Center" />
            <StackLayout Grid.Row="1"
                         Margin="20"
                         Spacing="20">
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span FontAttributes="Bold"
                                      FontSize="22"
                                      Text="Notes" />
                                <Span Text="v1.0" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="This app was was written with Xamarin Forms 5.0" />
                <Button Clicked="OnButtonLearnMoreClicked"
                        Text="Learn More" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>